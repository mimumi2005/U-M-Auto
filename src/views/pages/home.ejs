                                <div class="rounded text-center">
                                    <a class="text-light " href="/Services?scrollTo=Car_Painting">
                                        <img class="img rounded " src="/images/Car_Painting.png"
                                            alt="Car painting image">
                                        <h4 class="text-center position-absolute overlay-text">
                                            <%= __('car_painting_title') %>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                            <div class="service-item col-md-4 p-2 m-1">
                                <div class="rounded text-center">
                                    <a class="text-light " href="/Services?scrollTo=Rust_Removal">
                                        <img class="img rounded " src="/images/Rust_Removal.jpg"
