                                        <h4 class="text-center position-absolute overlay-text">
                                            <%= __('rust_removal_title') %>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                            <div class="service-item col-md-4 p-2 m-1">
                                <div class="rounded text-center ">
                                    <a class="text-light  " href="/Services?scrollTo=Tuning">
                                        <img class="img rounded " src="/images/Tuning.png" alt="Tuning image">
                                        <h4 class="text-center position-absolute overlay-text">
                                            <%= __('tuning_title') %>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                            <div class="service-item col-md-4 p-2 m-1">
                                <div class="rounded text-center">
                                    <a class="text-light " href="/Services?scrollTo=Custom_Part_Insertion">
                                        <img class="img rounded" src="/images/Custom_Part_Insertion.png"
                                            alt="Custom part insertion image">
                                        <h4 class="text-center position-absolute overlay-text">
                                            <%= __('custom_part_insertion_title') %>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                            <div class="service-item col-md-4 p-2 m-1">
                                <div class="rounded text-center " id="PriceEstimatorGuest">
                                    <a class="text-light ">
                                        <img class="img rounded " src="/images/Price_Calculation_Guest.jpg"
                                            alt="Log in to access this function image">
                                    </a>
                                </div>
                                <div class="rounded text-center " id="PriceEstimator">
                                    <a class="text-light" href="/Estimator">
                                        <img class="img rounded" src="/images/Price_Calculation.jpg"
                                            alt="Automatic price estimator image">
                                        <h4 class="text-center position-absolute overlay-text">
                                            <%= __('price_estimator_title') %>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Carousel Controls -->
                    <a class="carousel-control-prev" href="#servicesCarousel" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#servicesCarousel" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
