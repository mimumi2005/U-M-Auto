                            alt="<%= __('Click or press enter to expand') %>" id="workerDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <%= __('Check Appointments') %>
                        </a>
                        <div class="dropup dropdown-menu " aria-labelledby="workerDropdown">
